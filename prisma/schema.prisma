// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        	Int      @id @default(autoincrement())
  createdAt 	DateTime @default(now())
  email     	String   @unique
  first_name	String
	last_name		String
	username		String	 @unique
	online 			Boolean
	role      	Role     @default(USER)

}

enum Role {
  USER
  ADMIN
}